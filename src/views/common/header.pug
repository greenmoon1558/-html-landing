header.header__block
  picture
    source(
      data-srcset="img/header/Logo.webp 1x, img/header/Logo@2x.webp 2x", 
      type="image/webp")
    img.logo(
      src="img/header/Logo.png", 
      srcset="img/header/Logo@2x.png 2x", 
      alt="logo, Mcgrew behavior services")
  input.menu__checkbox(type="checkbox", name="checkbox", id="burgger")
  label.menu__burger(for="burgger") 
    img(
      src="/img/header/menu.svg", 
      alt="menu icon")
  nav.menu__list
    a(href="#home").menu__item home
    a(href="#about").menu__item about us
    a(href="#contact").menu__item contact